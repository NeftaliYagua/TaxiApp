<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaxiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_slate_blue</item>
        <item name="colorPrimaryVariant">@color/maya_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/canary</item>
        <item name="colorSecondaryVariant">@color/dandelion</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--<item name="toolbarStyle">@style/Theme.TaxiApp.Toolbar</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>-->
    </style>

